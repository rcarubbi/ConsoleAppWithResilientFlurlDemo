{
  "HttpClientPolicies": [
    {
      "Name": "ClientA",
      "BaseAddress": "https://localhost:7276/",
      "TimeoutInSeconds": 5,
      "RetryCount": 3,
      "RetryDelayInSeconds": 2,
      "CircuitBreakerDurationInSeconds": 30,
      "CircuitBreakerSamplingDurationInSeconds": 60,
      "CircuitBreakerFailureRatio": 50,
      "CircuitBreakerMinimumThroughput": 5,
      "MaxConcurrentCalls": 10
    },
    {
      "Name": "ClientB",
      "BaseAddress": "https://localhost:7277/",
      "UseDefaultPipeline": true
      //"TimeoutInSeconds": 5,
      //"RetryCount": 10,
      //"RetryDelayInSeconds": 2,
      //"CircuitBreakerDurationInSeconds": 10,
      //"CircuitBreakerSamplingDurationInSeconds": 60,
      //"CircuitBreakerFailureRatio": 50,
      //"CircuitBreakerMinimumThroughput": 5,
      //"MaxConcurrentCalls": 10
    }
  ],
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Enrichers.Thread", "Serilog.Enrichers.Process", "Serilog.Enrichers.Environment" ],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{EnvironmentName} {ProcessId} {ThreadId} {Timestamp:HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "WithThreadId", "WithProcessId", "WithEnvironmentName" ]
  }
}